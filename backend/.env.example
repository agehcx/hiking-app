# Environment Variables
NODE_ENV=development
PORT=8080
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/hiking-app
MONGODB_URI_TEST=mongodb://localhost:27017/hiking-app-test
MONGODB_DB_NAME=hiking-app

# JWT & Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-with-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth 2.0 - Google
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/google/callback

# CORS & Frontend
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Rate Limiting & Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# Vector Database - Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=hiking_embeddings

# AI Services - OpenAI & Whisper
OPENAI_API_KEY=your-openai-api-key
WHISPER_MODEL_NAME=whisper-1
EMBEDDING_MODEL=text-embedding-3-small

# Google Cloud Services
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=hiking-app-uploads
GOOGLE_CLOUD_VERTEX_AI_ENDPOINT=your-vertex-ai-endpoint

# ColiVara Vision Embeddings
COLIVARA_API_KEY=your-colivara-api-key
COLIVARA_API_URL=https://api.colivara.com/v1

# File Upload & Storage
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,audio/mpeg,audio/wav,application/pdf
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# External APIs
WEATHER_API_KEY=your-weather-api-key
MAPS_API_KEY=your-google-maps-api-key
TRAILS_API_KEY=your-trails-api-key

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Webhook URLs (for notifications)
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url
